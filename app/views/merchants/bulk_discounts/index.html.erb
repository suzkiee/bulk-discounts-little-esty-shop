<div>
  <h1> <%= @merchant.name %> - All Bulk Discounts </h1></br>
  <%= button_to "Create New Bulk Discount", new_merchant_bulk_discount_path(@merchant), method: :get %></br>
  <table class="center" style="text-align: center;" id= "#top_5" style='width: 100%; border-color: white;'>
    <tr>
      <th>Name</th>
      <th>Discount</th>
      <th></th>
    </tr>
    <% @merchant.bulk_discounts.each do |discount| %>
          <tr>
            <td><%= link_to discount.name, merchant_bulk_discount_path(@merchant, discount) %></td>
            <td><%= discount.percent_discount %>% off <%= discount.threshold %> items</td>
            <td><%= button_to "Delete #{discount.name} Discount",  merchant_bulk_discount_path(@merchant, discount), method: :delete, data: {confirm: "Are you sure you want to delete this discount?"} %></td>
          </tr>
      <% end %>
  </table><br>
</div>