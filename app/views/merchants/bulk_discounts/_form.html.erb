<%= form_with model: bulk_discount, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>
  <%= f.label :percent_discount %>
  <%= f.number_field :percent_discount %><br/><br/>
  <%= f.label :threshold %>
  <%= f.number_field :threshold %><br/><br/>
  <%= f.hidden_field :merchant_id, value: @merchant.id %>
  <%= f.submit %>
<% end %>
